{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": [
      "vitest/globals"
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@providers/*": [
        "providers/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@assets/*": [
        "../assets/*"
      ],
      "@theme/*": [
        "theme/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.svg",
    "**/*.png"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "**/coverage"
  ]
}