{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["nativewind/types", "vitest/globals"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@providers/*": ["providers/*"],
      "@routes/*": ["routes/*"],
      "@screens/*": ["screens/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
