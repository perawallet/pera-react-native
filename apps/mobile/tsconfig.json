{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@providers/*": ["providers/*"],
      "@routes/*": ["routes/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["../assets/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.svg", "**/*.png"],
  "exclude": ["**/node_modules", "**/Pods", "**/coverage"]
}
