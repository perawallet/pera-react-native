#!/bin/sh
# Pre-push hook for linting, formatting, copyright checking, and testing

echo "Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Run ESLint
echo "\n${YELLOW}Running ESLint...${NC}"
pnpm run lint

if [ $? -ne 0 ]; then
  echo "${RED}ESLint failed. Please fix the errors before pushing.${NC}"
  echo "${YELLOW}You can run 'pnpm lint:fix' to auto-fix some issues.${NC}"
  exit 1
fi

echo "${GREEN}✓ ESLint passed${NC}"

# Run formatter
echo "\n${YELLOW}Running formatter...${NC}"
pnpm run format

if [ $? -ne 0 ]; then
  echo "${RED}Formatting failed.${NC}"
  exit 1
fi

echo "${GREEN}✓ Formatting complete${NC}"

# Run copyright header check
echo "\n${YELLOW}Checking copyright headers...${NC}"
pnpm run lint:copyright

if [ $? -ne 0 ]; then
  echo "${RED}Copyright header check failed.${NC}"
  echo "${YELLOW}Please ensure all files have the proper copyright header.${NC}"
  exit 1
fi

echo "${GREEN}✓ Copyright headers valid${NC}"

# Run i18n check
echo "\n${YELLOW}Checking i18n...${NC}"
pnpm run lint:i18n

if [ $? -ne 0 ]; then
  echo "${RED}i18n check failed.${NC}"
  echo "${YELLOW}Please ensure all files have the proper i18n.${NC}"
  exit 1
fi

echo "${GREEN}✓ i18n valid${NC}"


# Run tests
echo "\n${YELLOW}Running tests...${NC}"
pnpm run test

if [ $? -ne 0 ]; then
  echo "${RED}Tests failed. Please fix the failing tests before pushing.${NC}"
  echo "${YELLOW}You can run 'pnpm test' to see the test results.${NC}"
  exit 1
fi

echo "${GREEN}✓ All tests passed${NC}"

echo "\n${GREEN}All pre-push checks passed!${NC}"
exit 0