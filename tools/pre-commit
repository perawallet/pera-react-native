#!/bin/sh
# Pre-commit hook for linting and copyright checking

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' || true)

if [ -z "$STAGED_FILES" ]; then
  echo "${YELLOW}No TypeScript/JavaScript files to check${NC}"
else
  echo "${YELLOW}Checking staged files...${NC}"
  
  # Run ESLint on staged files
  echo "\n${YELLOW}Running ESLint...${NC}"
  echo "$STAGED_FILES" | xargs pnpm eslint
  
  if [ $? -ne 0 ]; then
    echo "${RED}ESLint failed. Please fix the errors before committing.${NC}"
    echo "${YELLOW}You can run 'pnpm lint:fix' to auto-fix some issues.${NC}"
    exit 1
  fi
  
  echo "${GREEN}✓ ESLint passed${NC}"
fi

# Run formatter
echo "\n${YELLOW}Running formatter...${NC}"
pnpm run format

if [ $? -ne 0 ]; then
  echo "${RED}Formatting failed.${NC}"
  exit 1
fi

echo "${GREEN}✓ Formatting complete${NC}"

# Run copyright header check
echo "\n${YELLOW}Checking copyright headers...${NC}"
pnpm run lint:copyright

if [ $? -ne 0 ]; then
  echo "${RED}Copyright header check failed.${NC}"
  echo "${YELLOW}Please ensure all files have the proper copyright header.${NC}"
  exit 1
fi

echo "${GREEN}✓ Copyright headers valid${NC}"

echo "\n${GREEN}All pre-commit checks passed!${NC}"
exit 0