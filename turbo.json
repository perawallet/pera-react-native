{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "generate:config": {
      "cache": false,
      "outputs": [
        "packages/config/src/generated-env.ts"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "dev:packages": {
      "dependsOn": [
        "^dev:packages"
      ],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "transit": {
      "dependsOn": [
        "^transit"
      ]
    },
    "android": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "ios": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}